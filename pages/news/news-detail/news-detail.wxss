/* pages/news/news-detail/news-detail.wxss */
.detail-container{
  display: flex;
  flex-direction: column;
}

.head-image{
  width:100%;
  height: 460rpx;
}

.music-bg{
  width: 102rpx;
  height: 110rpx;
  position: absolute;
  left: 50%;
  margin-left: -51rpx;
  top: 180rpx;
  opacity: 0.6;
}

.author{
  flex-direction: row;
  margin-left: 30rpx;
  margin-top: 20rpx;
}

.author image{
  width: 90rpx;
  height: 90rpx;
  vertical-align: middle;
}

.author text{
  margin-left:20rpx;
  vertical-align: middle;
}

.author-text{
  font-size:30rpx;
  font-weight: 300;
  color:#666;
}

.author-const{
  font-size: 24rpx;
  color: #999;
}

.pub-date{
  font-size: 24rpx;
  margin-left: 30rpx;
  color: #999;
}

.detail-title{
  margin-left: 30rpx;
  margin-top: 30rpx;
}

.tool {
  margin:20rpx 30rpx 0rpx 30rpx;
}

.circle-img {
  float: right;
  vertical-align: middle;
}

.circle-img Image {
  width: 90rpx;
  height: 90rpx;
}

.share-img {
  margin-left: 30rpx;
}

.horizon {
  width: 100%;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}


.detail-title text{
  font-size: 36rpx;
  font-weight: 700;
  letter-spacing: 2px;
  color: #4b556c;
}


.detail{
  color: #666;
  margin: 20rpx 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}
