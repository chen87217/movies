<template name='news-lists'>
  <view class='news-container'>
      <view class='news-author'>
        <image class='user-face' src='{{item.avatar}}'></image>
        <text class='pub-date'>{{item.date}}</text>
      </view>
      <text class='news-title'>{{item.title}}</text>
      <image class='news-image' src='{{item.imgSrc}}' mode='aspectFill'></image>
      <text class='news-desc'>{{item.content}}</text>
      <view class='news-icon'>
        <view>
          <image src='../../images/icon/chat.png' ></image>
          <text>{{item.collection}}</text>
        </view>

        <view>
          <image src='../../images/icon/view.png' ></image>
          <text>{{item.reading}}</text>
        </view>
        
      </view>
    </view>
</template>