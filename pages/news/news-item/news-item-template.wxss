.news-container{
  display: flex;
  flex-direction: column;
  margin-top:40rpx;
  margin-bottom:10px;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
  background-color: #fff;
}

.news-author{
  margin:10rpx 0rpx 20rpx 10rpx;
}

.user-face{
  width:120rpx;
  height: 120rpx;
  vertical-align: middle;
}

.pub-date{
  margin-left: 20rpx;
  margin-bottom: 5px;
  vertical-align: middle;
  font-size: 26rpx;
  font-weight: bold;
  color:#999;
}

.news-title{
  font-size:34rpx;
  font-weight: 600;
  color:#333;
  margin-left: 10px;
  margin-bottom:10px;
}

.news-image{
  margin-bottom:15px;
  height: 340rpx;
}

.news-desc{
  font-size:28rpx;
  color: #666;
  margin:0 5rpx 20rpx 10rpx;
  letter-spacing: 2rpx;
  line-height: 32rpx;
}

.news-icon{
  display: flex;
  flex-direction: row;
  margin-left:10rpx;
  margin-bottom: 20rpx;
}

.news-icon view{
  margin-right:100rpx;
}

.news-icon image{
  margin-right:10rpx;
  width:32rpx;
  height: 32rpx;
  vertical-align: middle;
}

.news-icon text{
  margin-right:20rpx;
  font-size:32rpx;
  vertical-align: middle;
}